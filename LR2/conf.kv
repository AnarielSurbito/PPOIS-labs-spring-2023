#:kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex
#:import sp kivy.metrics.sp

<WindowManager>:
	MenuScreen:
	SearchScreen:
		id: search_scr
	DeleteScreen:
		id: delete_scr
	DataScreen:
		id: data_scr

<DataScreen>:
	name:'info'
	canvas.before:
        Color:
            rgba: hex("#E0B0FF")
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
		orientation:'vertical'
		padding:10
		GridLayout:
			size_hint:1,0.3
			cols: 2
			row_force_default: True
			row_default_height: 40
			row_default_weight: 30
			MyButton:
				text: 'Back to delete'
				on_press: app.change_screen('delete')
			MyButton:
				text: 'Back to search'
				on_press: app.change_screen('search')
		AnchorLayout:
			id: data_layout
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:1,0.7

<MenuScreen>:
	name:'table'
	canvas.before:
        Color:
            rgba: hex("#E0B0FF")
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
		spacing: 5
		orientation:'vertical'
		GridLayout:
			cols: 2
			row_force_default: True
			row_default_height: 40
			row_default_weight: 30
			MyButton:
				text: 'Back to search'
				on_press: app.change_screen('search')
			MyButton:
				text: 'Back to delete'
				on_press: app.change_screen('delete')
		MainWidget:

<MyLabel>:
	rgba: hex("#9932CC")
	canvas.before:
		Color:
			rgba: hex("#9932CC")
		Rectangle:
			pos: self.pos
			size: self.size
<MyButton>:
	background_color: hex( '#CD00CD')

<MyTextInput>:
	multiline: False
	foreground_color: hex('#E6A8D7')
	background_color: hex( '#991199')

<SearchScreen>:
	name:'search'
	product: product
	producer: producer
	number: number
	unp: unp
	address: address
	canvas.before:
        Color:
            rgba: hex("#E0B0FF")
        Rectangle:
            size: self.size
            pos: self.pos
	BoxLayout:
		cols:1
		spacing: 5
		orientation:'vertical'
		GridLayout:
			size_hint:1,0.2
			cols:2
			row_force_default: True
			row_default_height: 40
			row_default_weight: 30
			MyButton:
				text: 'Back to info'
				on_release:
					app.load_table()
					app.change_screen('info')
			MyButton:
				text: 'Back to table'
				on_press: app.change_screen('table')
		AnchorLayout:
			id: data_search
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:0.7,0.3
		GridLayout:
			size_hint:1,0.5
			spacing:0,5
			padding: 20
			cols: 1
			MyLabel:
				size_hint:.2,.1
				text:"Filling the gaps..."
			GridLayout:
				spacing:5,5
				cols: 2
				rows: 6
				row_force_default: True
				row_default_height: 30
				row_default_weight: 20
				MyLabel:
					text: "Product"
				MyTextInput:
					id:product
				MyLabel:
					text: "Producer"
				MyTextInput:
					id:producer
				MyLabel:
					text: "UNP"
				MyTextInput:
					id:unp
					multiline:False
				MyLabel:
					text: "Number"
				MyTextInput:
					id:number
					multiline:False
				MyLabel:
					text:"Address"
				MyTextInput:
					id:address
			MyButton:
				size_hint:.3,.2
				text:"Search"
				on_press:
					root.on_press_button_search()
					app.load_table_search()

<DeleteScreen>:
	name:'delete'
	product: product
	producer: producer
	number: number
	unp: unp
	address: address
	canvas.before:
        Color:
            rgba: hex("#E0B0FF")
        Rectangle:
            size: self.size
            pos: self.pos
	BoxLayout:
		cols:1
		spacing: 5
		orientation:'vertical'

		GridLayout:
			size_hint:1,0.2
			cols:2
			row_force_default: True
			row_default_height: 40
			row_default_weight: 30
			MyButton:
				text: 'Back to table'
				on_press: app.change_screen('table')
			MyButton:
				text: 'Back to info'
				on_release:
					app.change_screen('info')
					app.load_table()
		AnchorLayout:
			id: data_delete
			pos_hint:{'center_x':.5,'center_y':.5}
			size_hint:0.7,0.3
		GridLayout:
			spacing:0,5
			size_hint:1,0.5
			padding: 20
			cols: 1
			MyLabel:
				size_hint:.2,.1
				text:"Filling the gaps..."
			GridLayout:
				spacing:5,5
				cols: 2
				rows: 6
				row_force_default: True
				row_default_height: 30
				row_default_weight: 20
				MyLabel:
					text: "Product"
				MyTextInput:
					id:product
				MyLabel:
					text: "Producer"
				MyTextInput:
					id:producer
				MyLabel:
					text: "UNP"
				MyTextInput:
					id:unp
					multiline:False
				MyLabel:
					text: "Number"
				MyTextInput:
					id:number
					multiline:False
				MyLabel:
					text:"Address"
				MyTextInput:
					id:address
			MyButton:
				size_hint:.3,.2
				text:"Delete"
				on_press:
					root.on_press_button_delete()
					app.load_table_delete()

<MainWidget>:
	id:main
	product: product
	producer: producer
	number: number
	unp: unp
	address: address
	GridLayout:
		spacing:0,5
		padding: 20
		cols: 1
		MyLabel:
			text:"Filling the gaps..."
			size_hint:.2,.1
		GridLayout:
			spacing:5,5
			cols: 2
			rows: 6
			row_force_default: True
			row_default_height: 30
			row_default_weight: 20
			MyLabel:
				text: "Product"
			MyTextInput:
				id:product
			MyLabel:
				text: "Producer"
			MyTextInput:
				id:producer
			MyLabel:
				text: "UNP"
			MyTextInput:
				id:unp
				multiline:False
			MyLabel:
				text: "Number"
			MyTextInput:
				id:number
				multiline:False
			MyLabel:
				text:"Address"
			MyTextInput:
				id:address
		MyButton:
			size_hint:.3,.2
			text:"Save"
			on_press: root.on_press_button_add()
